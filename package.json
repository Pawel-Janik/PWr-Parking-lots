{
  "name": "ParkingomatPWR",
  "version": "0.2.0",
  "description": "Progressive Web App featuring real time data about parking lots on Wrocław Univeristy of Technology.",
  "main": "server/app.js",
  "license": "GPL-3.0",
  "angular-cli": {},
  "scripts": {
    "start": "ng serve --host 0.0.0.0  --port 4200 --proxy-config proxy.conf.json & npm run _server:run",
    "lint": "tslint \"src/**/*.ts\"",
    "test": "ng test",
    "aot": "ng build --prod --output-path=dist/client && npm run _server:build",
    "build": "ng build --prod --output-path=dist/client && npm run _server:build",
    "_server:run": "tsc -p ./server && concurrently \"tsc -w -p ./server\" \"nodemon dist/server/bin/www.js\" ",
    "_server:build": "tsc -p ./server"
  },
  "author": "Paweł Janik",
  "private": true,
  "dependencies": {
    "@angular/common": "~2.1.0",
    "@angular/compiler": "~2.1.0",
    "@angular/core": "~2.1.0",
    "@angular/forms": "~2.1.0",
    "@angular/http": "~2.1.0",
    "@angular/platform-browser": "~2.1.0",
    "@angular/platform-browser-dynamic": "~2.1.0",
    "@angular/router": "~3.1.0",
    "@ngrx/core": "^1.2.0",
    "@ngrx/effects": "^2.0.0",
    "@ngrx/store": "^2.2.1",
    "@ngrx/store-devtools": "^3.2.1",
    "@ngrx/store-log-monitor": "^3.0.2",
    "body-parser": "~1.13.2",
    "bootstrap": "^4.0.0-alpha.5",
    "chart.js": "^2.3.0",
    "compression": "^1.6.2",
    "cookie-parser": "~1.3.5",
    "core-js": "^2.4.1",
    "cors": "^2.8.1",
    "express": "^4.13.4",
    "express-jwt": "^3.3.0",
    "jsonwebtoken": "^5.7.0",
    "ng2-charts": "^1.4.1",
    "node-uuid": "^1.4.7",
    "normalize.css": "^5.0.0",
    "path": "^0.12.7",
    "rxjs": "5.0.0-beta.12",
